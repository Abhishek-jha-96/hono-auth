generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id     Int    @id @default(autoincrement())
  name String
  email String
  password String
  created_at DateTime @default(now())

  auth_provider AuthProvider[]
}

model AuthProvider {
  id     Int    @id @default(autoincrement())
  user User @relation(fields: [auth_id], references: [id])
  auth_id Int
  type AuthType
}

enum AuthType {
  CREDENTIALS
  GOOGLE
  GITHUB
}